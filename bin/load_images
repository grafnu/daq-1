#!/bin/bash -e

artifact_path=$1
shift

touch .build_built

for shard in "$@"; do
    (
        cd $artifact_path/$shard
        cat .build_built >> .build_built
        for file in *.tar; do
            docker load < "$file"
        done
    )
    rm -rf $artifact_path/$shard
done

bin/build_hash write
