{
  "title": "DAQ Device Properties",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "required": [
    "device_datasheets_url",
    "device_description",
    "device_image",
    "device_info",
    "device_manuals_urlr",
    "modules",
    "process"
  ],
  "properties": {
    "device_datasheets_folder": {
      "type": "string",
      "pattern": "^[^*]"
    },
    "device_description": {
      "type": "string",
      "pattern": "^[^*]"
    },
    "device_image": {
      "type": "string",
      "pattern": "^[^*]"
    },
    "device_info": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z]{3,12}$": {
          "type": "string",
          "pattern": "^[^*]"
        }
      }
    },
    "device_manuals_folder": {
      "type": "string",
      "pattern": "^[^*]"
    },
    "modules": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z]{3,8}$": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "ports": {
      "type": "object"
    },
    "process": {
      "additionalProperties": false,
      "required": [
        "attempt_number"
      ],
      "properties": {
        "attempt_number": {
          "type": "integer"
        }
      }
    }
  }
}
